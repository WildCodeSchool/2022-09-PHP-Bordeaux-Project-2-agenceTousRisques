<div class="login-form-body">
    <div class="login-form">
        <div class="login-title">Se connecter</div>
        {% block errors %}
            <div class="user-connection-errors">
                {% for error in errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </div>
        {% endblock %}
        <form action="userConnection" method="post">
            <div class="input-container login-email-container">
                <input id="email" name="email" class="login-input" type="text" placeholder=" " />
                <div class="cut"></div>
                <label for="email" class="placeholder">Email</label>
            </div>
            <div class="input-container login-password-container">
                <input id="password" name="password" class="login-input" type="text" placeholder=" " />
                <div class="cut cut-short"></div>
                <label for="password" class="placeholder">Mot de passe</label>
            </div>
            <button type="submit" class="login-submit">connexion</button>
        </form>
    </div>
</div>
