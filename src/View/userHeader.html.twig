<div class="admin-header-container">
    <div id="menu-btn">
        <span class="icon"></span>
        <span class="text">MENU</span>
    </div>

    <div class="avatar-container">
        <a href="UserPage"><img class="admin-avatar" src="assets/images/avatar1.png" alt=""></a>
        <p class="admin-firstname">{{ user.firstname }}</p>
        <p class="admin-lastname">{{ user.lastname }}</p>
    </div>

    <a class="admin-logout-link" href="logout"><img src="assets/images/power-coloreddarken.png" alt=""
