{% extends 'layout.html.twig' %}

{% block title %}Inscription Utilisateur{% endblock %}

{% block stylesheet %}
    <link href="/assets/css/styleUserInscription.css"> {% endblock %}

{% block content %}
    <form action="" method="post">
        <div class="block-userInscription">
            <div class="form-userInscription">
                <h2>Mon Compte</h2>
                <label for="emailUserInscription">Email :</label>
                <input type="email" id="emailUserInscription" name="emailUserInscription" required>
            </div>
            <div class="form-userInscription">
                <label for="password">Mot de passe :</label>
                <input type="text" id="password" name="password" required
                       pattern="(?=^.{8,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$">
            </div>
            <div class="form-userInscription">
                <label for="activationCode">Code Activation :</label>
                <input type="number" id="activationCode" name="activationCode" required pattern="[a-zA-Z0-9]+">
            </div>
        </div>
        <div class="block-userInscription">

            <div class="form-userInscription">
                <h2>Informations Personnelles</h2>
                <label for="firstname">Prénom :</label>
                <input type="text" id="firstname" name="firstname" required pattern="[a-zA-Z0-9]+">
            </div>
            <div class="form-userInscription">
                <label for="lastname">Nom :</label>
                <input type="text" id="lastname" name="lastname" required pattern="[a-zA-Z0-9]+">
            </div>
            <div class="form-userInscription">
                <label for="telephone">N° de tel :</label>
                <input type="number" id="telephone" name="telephone" required pattern="[a-zA-Z0-9]+">
            </div>
            <div class="form-userInscription">
                <label for="address">Votre adresse :</label>
                <textarea id="address" name="address" rows="6" required></textarea>
            </div>
        </div>

        <div class="form-userInscription">
            <h2>Mes Joeys</h2>
            <label for="firstnameKid">Prénom :</label>
            <input type="text" id="firstnameKid" name="firstnameKid" required pattern="[a-zA-Z0-9]+">
        </div>
        <div class="form-userInscription">
            <label for="birthdayKid">Né(e) le :</label>
            <input type="date" id="birthdayKid" name="birthdayKid" required
                   pattern="(0[1-9]|1[0-9]|2[0-9]|3[01]).(0[1-9]|1[012]).[0-9]{4}">
        </div>
        <div class="form-userInscription">
            <label for="commentKid">Allergies / Choses à savoir :</label>
            <textarea id="commentKid" name="commentKid" rows="6" required></textarea>
        </div>
        <div class="form-userInscription">
            <button id="addJoey">Ajouter un Joey</button>
        </div>
        <div class="form-userInscription submit">
            <input type="submit" id="submitUserInscription" name="submit" value="Valider mon inscription">
        </div>
    </form>
{% endblock %}
